{
  "name": "size-v2-solidity",
  "description": "Size v2",
  "scripts": {
    "solhint": "solhint \"src/**/*.sol\"  --max-warnings 0",
    "deploy-sepolia": "forge script script/Deploy.s.sol --rpc-url sepolia --gas-limit 30000000 --sender $DEPLOYER --account size-testnet --legacy",
    "coverage": "forge coverage --report lcov && lcov --remove lcov.info -o lcov.info 'test/*' 'script/*' && genhtml lcov.info -o report --branch-coverage && open report/index.html",
    "typechain": "typechain --target ethers-v5 out/Size.sol/Size.json out/PriceFeed.sol/PriceFeed.json"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^11.1.2",
    "solhint": "^4.0.0",
    "typechain": "^8.3.2"
  }
}
